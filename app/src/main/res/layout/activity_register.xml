<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintRegisterLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/authenticationbackground"
    tools:context=".RegisterActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contraint_layout_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:background="@drawable/userauthenticationlayout"
        android:layout_marginTop="150dp">
        <TextView
            android:id="@+id/RegisterTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#00A5FF"
            android:textSize="30sp"

            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/RegisterBluetoothTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth Name"
            android:layout_marginStart="60dp"
            android:layout_marginTop="60dp"
            android:textSize="15sp"
            android:textColor="#00A5FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/RegisterTextview"/>
        <AutoCompleteTextView
            android:id="@+id/register_bluetooth_name"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:backgroundTint="#00A5FF"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RegisterBluetoothTextView" />


        <TextView
            android:id="@+id/RegisterUsernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00A5FF"
            android:text="Username"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_bluetooth_name"/>
        <AutoCompleteTextView
            android:id="@+id/register_Username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#00A5FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RegisterUsernameTextView" />
        <TextView
            android:id="@+id/registerPasswordTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#00A5FF"
            android:text="Password"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_Username"/>
        <AutoCompleteTextView
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:backgroundTint="#00A5FF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerPasswordTextview" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/RegisterButton"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Register"
            android:textColor="@color/white"
            android:background="@drawable/login_btn_bg"
            app:layout_constraintTop_toBottomOf="@id/register_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/SwipeLeftToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe Right to Login"
            android:textColor="#00A5FF"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/RegisterButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_right"
            app:layout_constraintStart_toEndOf="@id/SwipeLeftToLogin"
            app:layout_constraintTop_toTopOf="@id/SwipeLeftToLogin"
            app:layout_constraintBottom_toBottomOf="@id/SwipeLeftToLogin"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>